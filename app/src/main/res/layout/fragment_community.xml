<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:windowSoftInputMode="adjustResize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_messages_recycler_view">
    <VideoView
        android:id="@+id/video"
        android:layout_width="1280dp"
        android:layout_height="720dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:text="upload"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:id="@+id/uploadbtn"
        />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:textOff="PAUSE"
        android:textOn="PLAY" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white"
        android:layout_height="wrap_content"
        android:visibility="gone"
      />
    </RelativeLayout>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_messages_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@id/chat_input_layout"
        android:background="@color/black"
        android:scrollbars="vertical"
        android:paddingBottom="10dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:clipToPadding="false" />

    <!-- Chat input layout with EditText and Send button -->
    <RelativeLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D1CCCC"
        android:padding="2dp">

        <EditText
            android:id="@+id/chat_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Type your message here..."
            android:padding="10dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/chat_send_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/comment_send_btn"
            />

    </RelativeLayout>

</RelativeLayout>