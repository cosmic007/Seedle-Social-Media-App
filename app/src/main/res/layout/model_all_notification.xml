<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="2dp">


    <ImageView
        android:id="@+id/model_allnotification_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="5dp"


        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_notifications" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/black"
        android:id="@+id/model_allnotification_profilepic"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/model_allnotification_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/model_allnotification_useremail"
        android:layout_toRightOf="@id/model_allnotification_profilepic"
        android:text="cosmic@gmail.com"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/model_allnotification_action"
        android:layout_below="@id/model_allnotification_useremail"
        android:layout_toRightOf="@id/model_allnotification_profilepic"
        android:layout_marginLeft="10dp"
        android:text="liked your status"
        android:textSize="11.5dp"

        android:textColor="#403F3F"/>







</RelativeLayout>