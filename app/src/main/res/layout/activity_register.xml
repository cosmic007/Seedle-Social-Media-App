<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RegisterPage"
    android:background="@drawable/bgimage"
    tools:context=".Activities.RegisterActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Registerpage_userprofile"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="95dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/userprofile" />
    <EditText
        android:id="@+id/Resgisterpage_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Registerpage_userprofile"
        android:hint="Username"
        android:maxLength="35"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:padding="10dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />

    <EditText
        android:id="@+id/Resgisterpage_emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/Resgisterpage_username"
        android:hint="Mail ID"
        android:inputType="textEmailAddress"
        android:maxLength="35"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:padding="10dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />

    <TextView
        android:id="@+id/Resgisterpage_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Resgisterpage_emailid"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/dob"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:textSize="17dp"
        android:hapticFeedbackEnabled="true"
        android:hint="Date of Birth"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Registerpage_password"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="@color/white"
        android:hint="@string/password_hint"
        android:textColorHint="@color/white"
        android:layout_below="@id/Resgisterpage_dob"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Registerpage_confirm_password"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="@color/white"
        android:hint="Confrim password"
        android:textColorHint="@color/white"
        android:layout_below="@id/Registerpage_password"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterPage_Radiogroup"
        android:orientation="horizontal"
        android:layout_below="@id/Registerpage_confirm_password"
        android:layout_marginTop="3dp"
        android:layout_centerInParent="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male_radio"
            android:text="Male"
            android:textColor="@color/white"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female_radio"
            android:text="Female"
            android:textColor="@color/white"
            android:checked="true"
            />
    </RadioGroup>

    <Button
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:id="@+id/RegisterPage_RegisterBtn"
        android:layout_below="@id/RegisterPage_Radiogroup"
        android:layout_centerInParent="true"
        android:text="Register"
        android:background="@drawable/round_btnbg"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        />





</RelativeLayout>