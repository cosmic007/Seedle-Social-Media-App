<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/model_favorite_ts_RL"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"

        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/model_textstatusinnerRL"
        android:elevation="3dp"
        android:background="@drawable/edittheme">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/favorite_removebtn"
            android:layout_marginRight="16dp"
            android:elevation="5dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/icon_remove_fav"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/userprofile"
            android:layout_marginTop="6.2dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:id="@+id/favorite_profilepic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/favorite_username"
            android:layout_toRightOf="@id/favorite_profilepic"
            android:text="Abhijith V A"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:paddingTop="1dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="13sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/favorite_dateTV"
            android:text="00:00 AM 2019 Jan 20"
            android:textColor="@color/black"
            android:layout_marginTop="-11dp"
            android:textSize="8sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/favorite_username"
            android:layout_toRightOf="@id/favorite_profilepic"
            />

        <TextView
            android:id="@+id/fav_textStatusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/favorite_profilepic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:background="@color/black"

            android:layout_marginBottom="30dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="This is an example This is an example This is an example"
            android:textColor="@color/white"
            android:textSize="14sp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/model_textstatusinnerRL">



    </RelativeLayout>




</RelativeLayout>