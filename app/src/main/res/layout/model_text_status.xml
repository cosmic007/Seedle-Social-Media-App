<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/model_textStatusRL">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/model_textstatusinnerRL"
        android:elevation="3dp"
        android:background="@drawable/edit_bg2">
        <ImageView
            android:id="@+id/verified"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/model_textStatus_profileTV"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10.4dp"
            android:visibility="invisible"
            android:src="@drawable/verified"/>
        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/verified"
            android:layout_height="9dp"
            android:layout_marginTop="13.5dp"
            android:layout_marginLeft="3dp"
            android:text="Developer"
            android:textSize="6sp"
            android:visibility="invisible"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:id="@+id/model_textStatus_favoriteTextStatus"
            android:layout_marginRight="16dp"
            android:elevation="5dp"
            android:src="@drawable/icon_fav"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/userprofile"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:id="@+id/model_textStatus_profileIV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/model_textStatus_profileTV"
            android:layout_toRightOf="@id/model_textStatus_profileIV"
            android:text="Abhijith V A"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:paddingTop="1dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="13sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/model_textStatus_dateTV"
            android:text="00:00 AM 2019 Jan 20"
            android:textColor="@color/black"
            android:layout_marginTop="-11dp"
            android:textSize="8sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/model_textStatus_profileTV"
            android:layout_toRightOf="@id/model_textStatus_profileIV"
            />

        <TextView
            android:id="@+id/model_textStatus_textStatusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/model_textStatus_profileIV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="5dp"

            android:paddingTop="20dp"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:minHeight="150dp"
            android:background="#060F4E"
            android:layout_marginBottom="11dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="This is an example This is an example This is an example"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        <LinearLayout
            android:id="@+id/model_textStatus_LinearLayout"
            android:layout_below="@id/model_textStatus_textStatusTV"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">





            <ImageView
                android:id="@+id/model_textStatus_heartIV"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_love"
                />

            <TextView
                android:id="@+id/model_textStatus_heartCountTV"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0"
                android:textSize="9sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/model_textStatus_hahaIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/happy" />

            <TextView
                android:id="@+id/model_textStatus_hahaCountTV"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0"
                android:textSize="9sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/model_textStatus_sadIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sad" />

            <TextView
                android:id="@+id/model_textStatus_sadCountTV"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0"
                android:textSize="9sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/model_textStatus_commentCountTV"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0"
                android:textSize="9sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/model_textStatus_commentIV"
                android:layout_width="49dp"
                android:textSize="9sp"
                android:text="Comments"
                android:layout_height="15dp"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/comment" />



            <ImageView
                android:id="@+id/model_textStatus_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_delete" />


        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/model_textstatusinnerRL">


    </RelativeLayout>




</RelativeLayout>
