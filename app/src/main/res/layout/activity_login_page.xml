<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/LoginPage"
    tools:context=".Activities.LoginPage">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bgimage"
        android:src="@drawable/bgimage"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/loginPagelogo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-61dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/loginPage_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPagelogo"
        android:layout_marginTop="-190dp"
        android:inputType="textEmailAddress"
        android:hint="@string/email_hint"
        android:maxLength="35"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:padding="10dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LoginPage_password"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="@color/white"
        android:hint="@string/password_hint"
        android:textColorHint="@color/white"
        android:layout_below="@id/loginPage_email"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:hapticFeedbackEnabled="true"
        android:outlineSpotShadowColor="@color/design_default_color_primary"
        android:outlineAmbientShadowColor="@color/design_default_color_primary"
        />
    <Button
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:id="@+id/loginPage_loginbtn"
        android:layout_below="@id/LoginPage_password"
        android:layout_centerInParent="true"
        android:background="@drawable/round_btnbg"
        android:text="@string/Login_String"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginPage_noAcc"
        android:layout_below="@id/loginPage_loginbtn"
        android:layout_centerInParent="true"
        android:text="@string/no_account"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:id="@+id/LoginPage_RegBtn"
        android:layout_centerInParent="true"
        android:background="@drawable/round_btnbg"
        android:layout_below="@id/LoginPage_noAcc"
        android:layout_marginTop="20dp"
        android:text="@string/Register"
        android:textAllCaps="false"
        />

</RelativeLayout>