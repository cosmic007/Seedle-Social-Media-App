<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/LoginPage"
    tools:context=".Activities.LoginPage">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/loginPagelogo"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-82dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/logo_black" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginPagelogo"
            android:layout_centerInParent="true"
            android:layout_marginTop="-215dp"
            android:text="Seedle"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/loginPage_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginPagelogo"
            android:layout_marginTop="-60dp"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:maxLength="35"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableStart="@drawable/user"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:elevation="10dp"
            android:paddingStart="8dp"
            android:gravity="center|left"
            android:background="@drawable/edit_bg2"
            android:padding="10dp"
            android:hapticFeedbackEnabled="true"
            android:outlineSpotShadowColor="@color/design_default_color_primary"
            android:outlineAmbientShadowColor="@color/design_default_color_primary"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LoginPage_password"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:maxLength="20"
            android:textColor="@color/black"
            android:hint="Password"

            android:background="@drawable/edit_bg2"
            android:elevation="10dp"
            android:paddingStart="8dp"
            android:drawableTint="@color/black"
            android:layout_below="@id/loginPage_email"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:hapticFeedbackEnabled="true"
            android:outlineSpotShadowColor="@color/design_default_color_primary"
            android:outlineAmbientShadowColor="@color/design_default_color_primary"
            />

        <Button
            android:id="@+id/loginPage_loginbtn"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:layout_below="@id/LoginPage_password"
            android:layout_centerInParent="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/round_btnbg"
            android:text="@string/Login_String"
            android:textAllCaps="false"
            android:textColor="@color/white" />



    </RelativeLayout>
</ScrollView>

    <TextView
        android:id="@+id/LoginPage_RegBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/LoginPage_noAcc"
        android:text="@string/Register"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LoginPage_noAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="620dp"
        android:layout_centerHorizontal="true"
        android:text="@string/no_account"
        android:textColor="@color/black" />


</RelativeLayout>