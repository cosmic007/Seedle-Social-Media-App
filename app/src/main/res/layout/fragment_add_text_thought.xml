<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentAddTextThought"
    tools:context=".Fragments.addTextThoughtFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="111dp"
            android:gravity="center"
            android:text="Text Thoughts"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/FragAddTextThoughtET"
            android:textColor="@color/black"
            android:background="@drawable/edit_bg2"
            android:elevation="10dp"
            android:hint="@string/textstatus_hint"
            android:textSize="12sp"
            android:gravity="top|left"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:maxLength="200"
            android:layout_marginTop="100dp"

        />


        <ImageView
            android:layout_width="147dp"
            android:layout_height="94dp"



            android:scaleType="centerCrop"
            android:src="@drawable/logo_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentAddTextThoughtsInner"
            android:gravity="center"
            android:layout_below="@id/FragAddTextThoughtET"
            >

            <TextView
                android:id="@+id/FragAddTextTHoughts_PostBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/upload_statusdrawable"
                android:padding="15dp"
                android:text="Upload Status"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/FragAddTextTHoughts_rewritePostBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-13dp"
                android:layout_toRightOf="@id/FragAddTextTHoughts_PostBtn"
                android:drawableTop="@drawable/rewritestatusdrawable"
                android:padding="20dp"
                android:text="Rewrite Status"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/FragAddTextTHoughts_BackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@id/FragAddTextTHoughts_rewritePostBtn"
                android:drawableTop="@drawable/backdrawable"
                android:padding="20dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="9sp" />


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>









</RelativeLayout>